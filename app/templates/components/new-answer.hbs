{{#if addNewAnswer}}
  <h1>Answer</h1>
<div>
  <h2>New Answer</h2>
  <form class="form-group">
    <div class="form-group">
      <label for="answer_area">Answer</label> {{textarea name="name" rows="8" cols="80" class="form-control" value=answer_area id="answer_area"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label> {{input class="form-control" value=author id="author"}}
    </div>

    <button class="btn btn-primary" {{action 'saveAnswer'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-success" {{action 'answerFormShow'}}>NewAnswer</button>

{{/if}}
